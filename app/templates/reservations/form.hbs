 <form>
    <h3>Datum</h3>
    {{input type="date" value=model.day placeholder="Choose date" required=true}}

    <h3>Tijd</h3>
    <h4>Start hour</h4>
    {{input type="number" list="lesuur" value=model.startHour placeholder="Choose hour" min=1 max=15 required=true}}
    <h4>End hour</h4>
    {{input type="number" list="lesuur" value=model.endHour placeholder="Choose hour" min=model.startHour max=16 required=true}}

    <h3>Locatie</h3>
    <h4>Gebouw</h4>
    {{input type="text" list="gebouw" value=model.building placeholder="Choose building" required=true}}

    <h4>Verdieping</h4>
    {{input type="number" list="floor" value=model.floor placeholder="Choose floor" required=true}}

    <h4>Lokaal number</h4>
    {{input type="number" list="roomNumber" value=model.roomNumber placeholder="Choose room" required=true}}

   <h4>Reservation name</h4>
   {{input type="text" value=model.label placeholder="Example: Project meeting" required=true}}

    <button type="submit" value="submit" {{action "saveModel"}}>Save reservation</button>
  </form>

<datalist id="lesuur">
  <option value="1">1e uur</option>
  <option value="2">2e uur</option>
  <option value="3">3e uur</option>
  <option value="4">4e uur</option>
  <option value="5">5e uur</option>
  <option value="6">6e uur</option>
  <option value="7">7e uur</option>
  <option value="8">8e uur</option>
  <option value="9">9e uur</option>
  <option value="10">10e uur</option>
  <option value="11">11e uur</option>
  <option value="12">12e uur</option>
  <option value="13">13e uur</option>
  <option value="14">14e uur</option>
  <option value="15">15e uur</option>
  <option value="16">16e uur</option>
</datalist>
<datalist id="gebouw">
  <option selected disabled>Choose building</option>
  <option value="Epydrost"> Epydrost</option>
</datalist>
<datalist id="floor">
  <option selected disabled>Choose floor</option>
  <option value="4">4th floor</option>
  <option value="5">5th floor</option>
</datalist>
<datalist id="roomNumber">
  <option selected disabled>Choose room</option>
  <option value="30"> 30</option>
  <option value="31"> 31</option>
  <option value="32"> 32</option>
  <option value="33"> 33</option>
</datalist>
