<div class="route-classrooms">
  <h1>Classrooms</h1>
  {{#if (has-role "admin")}}
    {{#link-to
      "classrooms.new"
    }}
      <button>Add new classroom</button>
    {{/link-to}}
  {{/if}}

  <ul>
    <table>
      <thead>
        <th>Classroom</th>
        <th>Capacity</th>
      </thead>
      <tbody>
        {{#each model as |classroom|}}
          <tr>
            <td>{{#link-to 'classrooms.show' classroom}}{{classroom.roomNumber}}{{/link-to}}</td>
            <td>{{classroom.capacity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </ul>
</div>