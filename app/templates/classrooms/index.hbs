<div class="route-classrooms">
  <h1>Classrooms</h1>
  {{#if (has-role "admin")}}
    {{#link-to
      "classrooms.new"
    }}
      <button>Add new classroom</button>
    {{/link-to}}
  {{/if}}

  <h1>Reserved classrooms</h1>
  <ul>
    <table>
      <thead>
        <th>Classroom</th>
        <th>Capacity</th>
      </thead>
      <tbody>
        {{#each reservedClassrooms as |classroom|}}
          <tr>
            <td>{{classroom.roomNumber}}</td>
            <td>{{classroom.capacity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </ul>

  <h1>Later reserved classrooms</h1>
  <ul>
    <table>
      <thead>
      <th>Classroom</th>
      <th>Capacity</th>
      </thead>
      <tbody>
      {{#each laterReservedClassrooms as |classroom|}}
        <tr>
          <td>{{classroom.roomNumber}}</td>
          <td>{{classroom.capacity}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </ul>

  <h1>Free classrooms</h1>
  <ul>
    <table>
      <thead>
      <th>Classroom</th>
      <th>Capacity</th>
      </thead>
      <tbody>
      {{#each freeClassrooms as |classroom|}}
        <tr>
          <td>{{classroom.roomNumber}}</td>
          <td>{{classroom.capacity}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </ul>
</div>
<main class="view view__classrooms">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="top-bar">
          <h1>Lokalen</h1>
          {{#link-to "reservations.new" class="btn btn--green"}}Toevoegen{{/link-to}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="grid-block">
          <div class="classrooms-block">
            {{#each model as |classroom|}}
              {{#link-to 'classrooms.show' classroom}}
                <div class="classroom">
                  <div class="classroom__room">{{classroom.roomNumber}}</div>
                  <div class="classroom__capacity">
                    Capaciteit: {{classroom.capacity}}
                  </div>
                </div>
              {{/link-to}}
            {{else}}
              <div>Er zijn nog geen lokalen aangemaakt</div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
