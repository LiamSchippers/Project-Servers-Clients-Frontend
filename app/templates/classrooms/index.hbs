<main class="view view__classrooms">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="top-bar">
          <h1>Lokalen</h1>
          {{#if (has-role "admin")}}
            {{#link-to "classrooms.new" class="btn btn--green"}}Toevoegen{{/link-to}}
          {{/if}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="grid-block">
          <div class="grid-block__title">Nu gereserveerd</div>
          <div class="classrooms-block">
            {{#each reservedClassrooms as |classroom|}}
              <div class="classroom">
                <div class="classroom__room">{{classroom.roomNumber}}</div>
                <div class="classroom__capacity">
                  Capaciteit: {{classroom.capacity}} personen
                </div>
              </div>
            {{else}}
              <div>Geen reserveringen gevonden</div>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="grid-block">
          <div class="grid-block__title">Later gereserveerd</div>
          <div class="classrooms-block">
            {{#each laterReservedClassrooms as |classroom|}}
              <div class="classroom">
                <div class="classroom__room">{{classroom.roomNumber}}</div>
                <div class="classroom__capacity">
                  Capaciteit: {{classroom.capacity}} personen
                </div>
              </div>
            {{else}}
              <div>Geen reserveringen gevonden</div>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="grid-block free-reservations">
          <div class="grid-block__title">Beschikbaar</div>
          <div class="classrooms-block">
            {{#each freeClassrooms as |classroom|}}
              <div class="classroom">
                <div class="classroom__room">{{classroom.roomNumber}}</div>
                <div class="classroom__capacity">
                  Capaciteit: {{classroom.capacity}} personen
                </div>
              </div>
            {{else}}
              <div>Er zijn nog geen lokalen aangemaakt</div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
