<div class="route-classrooms">
  <h1>Classrooms</h1>
  {{#if (has-role "admin")}}
    {{#link-to
      "classrooms.new"
    }}
      <button>Add new classroom</button>
    {{/link-to}}
  {{/if}}

  <h1>Reserved classrooms</h1>
  <ul>
    <table>
      <thead>
        <th>Classroom</th>
        <th>Capacity</th>
      </thead>
      <tbody>
        {{#each reservedClassrooms as |classroom|}}
          <tr>
            <td>{{classroom.roomNumber}}</td>
            <td>{{classroom.capacity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </ul>

  <h1>Later reserved classrooms</h1>
  <ul>
    <table>
      <thead>
      <th>Classroom</th>
      <th>Capacity</th>
      </thead>
      <tbody>
      {{#each laterReservedClassrooms as |classroom|}}
        <tr>
          <td>{{classroom.roomNumber}}</td>
          <td>{{classroom.capacity}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </ul>

  <h1>Free classrooms</h1>
  <ul>
    <table>
      <thead>
      <th>Classroom</th>
      <th>Capacity</th>
      </thead>
      <tbody>
      {{#each freeClassrooms as |classroom|}}
        <tr>
          <td>{{classroom.roomNumber}}</td>
          <td>{{classroom.capacity}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </ul>
</div>