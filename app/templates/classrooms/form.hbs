<form id="formReservation"{{action "saveModel" on="submit"}}>
  <div class="row">
    <div class="col-12">
      <div class="grid-block">
        <div class="form-group">
          <label for="date">Naam</label>
          {{input
            type="text"
            value=model.roomNumber
            required=true
            class="default-input default-input--border"
            pattern="([A-Z]{1})([0-9]{1})([.]{1})([0-9]{2})"
            placeholder="Notatie: G5.30"
          }}
        </div>
        <div class="form-group">
          <label for="date">Capaciteit</label>
          {{input
            type="number"
            value=model.capacity
            required=true
            class="default-input default-input--border"
            min="1"
          }}
        </div>
        <div class="form-group">
          <label for="date">Gebouw</label>
          {{input
            type="text"
            value=model.building
            required=false
            class="default-input default-input--border"
          }}
        </div>
        <div class="form-group">
          <label for="date">Hoofdtype</label>
          {{input
            type="text"
            value=model.mainClassroomType
            required=false
            class="default-input default-input--border"
          }}
        </div>
        <div class="form-group">
          <label for="date">Subtype</label>
          {{input
            type="text"
            value=model.kind
            required=false
            class="default-input default-input--border"
          }}
        </div>
        <div class="form-group">
          <label for="date">Faciliteiten</label>
          {{input
            type="text"
            value=model.type
            required=false
            class="default-input default-input--border"
          }}
        </div>
        <button type="submit" class="btn btn--green" value="submit">Opslaan</button>
      </div>
    </div>
  </div>
</form>
