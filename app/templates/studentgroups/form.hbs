<form {{action "saveModel" on="submit"}}>
  <tr>
    <th>
      Studentgroup
      <br>
      {{input
        type="text"
        value=model.groupName
        required=true
        placeholder="Example: projectgroup"
      }}
    </th>
    <th>
      Hours
      <br>
      {{input
        type="number"
        value=model.hours
        required=true
        placeholder="Example: 10"
        min="1"
      }}
    </th>
    <th>
      Maximal amount of hours
      <br>
      {{input
        type="number"
        value=model.maxHours
        required=true
        placeholder="Example: 2"
        min="1"
      }}
    </th>
  </tr>
  <br>
 <button value="cancel" {{action "cancelModel"}}>Terug</button>
 <button type="submit" value="submit" {{action "saveModel"}}>Opslaan</button>
</form>
