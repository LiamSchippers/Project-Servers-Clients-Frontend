<main class="login-register-view">
  <div class="login-register-view__content">
    <div class="logo">Web Room Booking</div>
    <form>
      {{#if errorMessage}}
        <div class="alert alert--danger icon-danger">{{errorMessage}}</div>
      {{/if}}
      <div class="form-group">
        {{input
          value=model.email
          type="email"
          placeholder="E-mailadres"
          class="default-input"
        }}
      </div>
      <div class="form-group">
        {{input
          value=model.username
          type="text"
          placeholder="Gebruikersnaam"
          class="default-input"
        }}
      </div>
      <div class="form-group">
        {{input
          value=model.password
          type="password"
          placeholder="Wachtwoord"
          class="default-input"
        }}
      </div>
      <div class="form-group">
        {{input
          value=passwordCheck
          type="password"
          placeholder="Wachtwoord bevestigen"
          class="default-input"
        }}
      </div>
      <button type="submit" {{action "signUp"}} class="btn btn--green">Registreren</button>
    </form>
    <span class="separator"></span>
    <p>Heb je al een account?</p>
    {{#link-to "login" class="btn btn--gray"}}Inloggen{{/link-to}}
  </div>
</main>
